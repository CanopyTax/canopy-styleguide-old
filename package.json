		"babel-preset-react": "^6.24.1",
		"babel-preset-stage-2": "^6.24.1",
		"css-loader": "^0.28.7",
		"custom-event-polyfill": "^0.3.0",
		"extract-text-webpack-plugin": "2.1.0",
		"file-loader": "0.11.2",
		"git-tasker": "^1.0.1",
		"highlight.js": "^9.10.0",
		"html-loader": "^0.5.1",
		"jasmine": "^2.5.3",
		"json-loader": "^0.5.7",
		"karma": "^1.5.0",
